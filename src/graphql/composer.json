{
    "name": "hyperf/graphql",
    "description": "A GraphQL component for hyperf.",
    "license": "MIT",
    "keywords": [
        "php",
        "swoole",
        "hyperf",
        "GraphQL"
    ],
    "require": {
        "php": ">=7.2",
        "thecodingmachine/graphqlite": "^3.0",
        "hyperf/contract": "~2.1.0",
        "hyperf/di": "~2.1.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.15",
        "phpunit/phpunit": "^9.4"
    },
    "suggest": {
        "hyperf/http-server": "Required to use GraphQLMiddleware.",
        "hyperf/http-message": "Required to use GraphQLMiddleware."
    },
    "autoload": {
        "psr-4": {
            "Hyperf\\GraphQL\\": "src/"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "2.1-dev"
        },
        "hyperf": {
            "config": "Hyperf\\GraphQL\\ConfigProvider"
        }
    },
    "scripts": {
        "cs-fix": "php-cs-fixer fix $1"
    },
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://mirrors.aliyun.com/composer"
        }
    }
}
